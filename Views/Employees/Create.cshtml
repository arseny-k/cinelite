@model CineLite.Models.Employee
@{
    var isNew = Model?.Id == 0 || Model == null;
    ViewData["Title"] = isNew ? "Create" : "Edit";
}


<h2>@ViewData["Title"] Employee</h2>

<form asp-action="@ViewData["Title"]">
    <input type="hidden" asp-for="Id" value="0" />
    
    <div class="form-group">
        <label asp-for="FullName"></label>
        <input asp-for="FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Gender"></label>
        <input asp-for="Gender" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PassportData"></label>
        <input asp-for="PassportData" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PositionId"></label>
        <select asp-for="PositionId" class="form-control"
            asp-items="@(new SelectList(ViewBag.Positions, "Id", "Title"))">
            <option value="">-- Select Position --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Save</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
</form>
