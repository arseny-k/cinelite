@model List<CineLite.Models.Movie>

<h1>Movies</h1>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Duration</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@movie.Title</td>
                <td>@movie.Genre.Name</td>
                <td>@movie.Duration</td>
                <td>
                    <a href="/Movies/Details/@movie.Id" class="btn btn-sm btn-info">Details</a>
                    <a href="/Movies/Edit/@movie.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a href="/Movies/Delete/@movie.Id" class="btn btn-sm btn-danger">Delete</a>

                </td>

            </tr>
        }

        <a class="btn btn-success mb-3" href="/Movies/Create">Add New Movie</a>



    </tbody>
</table>
