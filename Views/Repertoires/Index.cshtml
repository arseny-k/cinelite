@model List<CineLite.Models.Repertoire>

<h2>Repertoires</h2>
<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Start Time</th>
            <th>Duration</th>
            <th>Price</th>
            <th>Movie ID</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.Date.ToShortDateString()</td>
                <td>@r.StartTime</td>
                <td>@r.Duration</td>
                <td>@r.TicketPrice</td>
                <td>@r.MovieId</td>
            </tr>
        }
    </tbody>
</table>
